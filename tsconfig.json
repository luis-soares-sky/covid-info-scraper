{
	"compilerOptions": {
		"outDir": "dist",
		"rootDir": ".",
		"target": "ES2017",
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"removeComments": true,
		"esModuleInterop": true,
		"noLib": false,
		"preserveConstEnums": true,
		"sourceMap": false,
		"pretty": true,
		"strict": true,
	},
	"exclude": [
		"dist",
		"node_modules",
		"**/__mocks__/*",
		"**/*.spec.ts"
	],
	"include": [
		"source/**/*"
	]
}
